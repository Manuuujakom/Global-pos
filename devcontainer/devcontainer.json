// For more format details, see https://aka.ms/devcontainer.json
{
  // Name the dev container for clarity
  "name": "PHP & Apache Dev Container",

  // Point to the Dockerfile to build the image
  "build": {
    "dockerfile": "Dockerfile"
  },

  // Forward port 80 to the host machine, so you can access the website
  "appPort": [80],

  // Set the workspace folder and mount the project root
  "workspaceMount": "source=${localWorkspaceFolder},target=/var/www/html,type=bind",
  "workspaceFolder": "/var/www/html",

  // Run a command after the container is created.
  // This command starts the live-server in the background.
  // The `--mount="."` option tells it to watch the current directory for changes.
  "postCreateCommand": "live-server --port=80 --no-browser --wait=500 --proxy=http://127.0.0.1:80"

  // Install a list of useful extensions automatically
  
}
